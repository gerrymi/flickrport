<!DOCTYPE html>
<html>
  <head>
    <title><% title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css'/>
<!-- 
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.js"></script>
 -->
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.5/angular.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.5/angular-route.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.5/angular-animate.min.js"></script>
    <script src="/angular/ng-infinite-scroll.min.js"></script>
  </head>
  <body ng-app="flickrPort">
    <div id="content" ng-controller="galleryCtrl">
      <div id="header">
        <h1><% username %> <small><%user_id%></small></h1>
      </div>
      <div id="gallery">
        <div ng-repeat="photoSet in photoSets"  class="fade-in photoset">
            <div class="{{ photoSet.photoset.title }} photoset-inner" style="background-image: url('https://farm{{ photoSet.photoset.photo[0].farm }}.staticflickr.com/{{ photoSet.photoset.photo[0].server }}/{{ photoSet.photoset.photo[0].id }}_{{ photoSet.photoset.photo[0].secret }}_b.jpg');">
              <h2>{{ photoSet.photoset.title }}</h2>
              <div class="photoset-slide-container">
                <ul class="photoset-slides" style="width: {{ photoSet.photoset.photo.length * 90 + 70}}px;">
                  <li class="cover"></li>
                  <li ng-repeat="photo in photoSet.photoset.photo">
                    <img src="https://farm{{ photo.farm }}.staticflickr.com/{{ photo.server }}/{{ photo.id }}_{{ photo.secret }}_q.jpg">
                  </li>
                </ul>
              </div>
            </div>
        </div>

      </div>
    </div>

    <script src="/angular/app.js"></script>
    <script>
      app.controller('galleryCtrl', function($scope, $http, $timeout) {
        $http.get('/data/<% username %>.json')
             .then(function(res){
                $scope.photoSets = [];
                $timeout(function() {
                  $scope.photoSets = res.data;
                })

              });
      });
    </script>
  </body>
</html>

